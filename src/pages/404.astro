---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/ui/Container.astro';
import Button from '../components/ui/Button.astro';
---

<BaseLayout title="Page Not Found" noindex>
  <section class="flex flex-1 items-center py-20">
    <Container class="text-center">
      <p class="text-7xl font-bold text-primary-600 dark:text-primary-400 sm:text-9xl">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
        Page not found
      </h1>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
        Sorry, the page you're looking for doesn't exist or has been moved.
      </p>
      <div class="mt-8">
        <Button href="/">Back to Home</Button>
      </div>
    </Container>
  </section>
</BaseLayout>
