---
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import { testimonials } from '../../data/testimonials';
---

<section class="py-20">
  <Container>
    <SectionHeading
      title="Client Testimonials"
      subtitle="What people say about working with me"
    />
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        testimonials.map((t) => (
          <div class="rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900">
            <svg class="mb-4 h-8 w-8 text-primary-300 dark:text-primary-700" fill="currentColor" viewBox="0 0 24 24">
              <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z" />
            </svg>
            <p class="mb-4 text-slate-600 dark:text-slate-400">{t.content}</p>
            <div>
              <p class="font-semibold text-slate-900 dark:text-white">{t.name}</p>
              <p class="text-sm text-slate-500 dark:text-slate-500">
                {t.role}, {t.company}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</section>
