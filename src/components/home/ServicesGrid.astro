---

<section class="py-20">
  <Container>
    <SectionHeading
      title="What I Do"
      subtitle="End-to-end development services tailored to your needs"
    />
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        services.map((service) => (
          <Card>
            <div class="mb-4 inline-flex rounded-lg bg-primary-50 p-3 text-primary-600 dark:bg-primary-950 dark:text-primary-400">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d={iconPaths[service.icon] || ''} />
              </svg>
            </div>
            <h3 class="mb-2 text-lg font-semibold text-slate-900 dark:text-white">
              {service.title}
            </h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">{service.description}</p>
          </Card>
        ))
      }
    </div>
  </Container>
</section>
