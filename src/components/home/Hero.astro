---
import Button from '../ui/Button.astro';
import Badge from '../ui/Badge.astro';
import { siteConfig } from '../../data/siteConfig';
---

<section class="relative overflow-hidden py-20 sm:py-32">
  <!-- Background gradient -->
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute inset-0 bg-gradient-to-br from-primary-50 via-white to-slate-50 dark:from-primary-950/30 dark:via-slate-950 dark:to-slate-950"
    >
    </div>
    <div
      class="absolute right-0 top-0 -z-10 h-[600px] w-[600px] rounded-full bg-primary-200/30 blur-3xl dark:bg-primary-900/20"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 -z-10 h-[400px] w-[400px] rounded-full bg-indigo-200/20 blur-3xl dark:bg-indigo-900/10"
    >
    </div>
  </div>

  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      {
        siteConfig.availability && (
          <Badge variant="success" class="mb-6 inline-flex items-center gap-1.5">
            <span class="h-1.5 w-1.5 rounded-full bg-emerald-500 animate-pulse" />
            {siteConfig.availabilityText}
          </Badge>
        )
      }

      <h1
        class="text-4xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-5xl lg:text-6xl"
      >
        Building digital products
        <span
          class="bg-gradient-to-r from-primary-600 to-indigo-600 bg-clip-text text-transparent dark:from-primary-400 dark:to-indigo-400"
        >
          that matter
        </span>
      </h1>

      <p class="mt-6 text-lg leading-8 text-slate-600 dark:text-slate-400 sm:text-xl">
        I'm Mohammed, a freelance software developer who crafts high-performance web applications,
        APIs, and mobile experiences. Let's turn your vision into reality.
      </p>

      <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <Button href="/contact" size="lg">
          Let's Work Together
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </Button>
        <Button href="/projects" variant="outline" size="lg">View My Work</Button>
      </div>
    </div>
  </div>
</section>
