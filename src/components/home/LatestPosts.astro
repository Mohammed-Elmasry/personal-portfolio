---
import { getCollection } from 'astro:content';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import Button from '../ui/Button.astro';
import { formatDate } from '../../utils/formatDate';
import { getReadingTime } from '../../utils/readingTime';

const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 3);
---

<section class="bg-slate-50 py-20 dark:bg-slate-900/50">
  <Container>
    <SectionHeading title="Latest Posts" subtitle="Thoughts on development, design, and technology" />
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="group rounded-xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-slate-900 dark:hover:shadow-slate-800/30"
          >
            <time class="text-sm text-slate-500 dark:text-slate-500" datetime={post.data.pubDate.toISOString()}>
              {formatDate(post.data.pubDate)}
            </time>
            <h3 class="mt-2 text-lg font-semibold text-slate-900 group-hover:text-primary-600 dark:text-white dark:group-hover:text-primary-400">
              {post.data.title}
            </h3>
            <p class="mt-2 text-sm text-slate-600 dark:text-slate-400 line-clamp-2">
              {post.data.description}
            </p>
            <p class="mt-4 text-sm font-medium text-primary-600 dark:text-primary-400">
              Read more &rarr;
            </p>
          </a>
        ))
      }
    </div>
    {
      posts.length > 0 && (
        <div class="mt-12 text-center">
          <Button href="/blog" variant="outline">View All Posts</Button>
        </div>
      )
    }
  </Container>
</section>
