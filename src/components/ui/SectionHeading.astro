---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = true } = Astro.props;
---

<div class:list={['mb-12', centered && 'text-center']}>
  <h2 class="text-3xl font-bold tracking-tight text-slate-900 dark:text-white sm:text-4xl">
    {title}
  </h2>
  {
    subtitle && (
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">{subtitle}</p>
    )
  }
</div>
