---
interface Props {
  class?: string;
  hover?: boolean;
}

const { class: className = '', hover = true } = Astro.props;
---

<div
  class:list={[
    'rounded-xl border border-slate-200 bg-white p-6 dark:border-slate-800 dark:bg-slate-900',
    hover && 'transition-shadow hover:shadow-lg dark:hover:shadow-slate-800/30',
    className,
  ]}
>
  <slot />
</div>
